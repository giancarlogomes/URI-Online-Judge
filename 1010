import java.io.IOException;
    import java.util.Scanner;    
        public class Main {
            public static void main(String[] args) throws IOException {
                Scanner input = new Scanner(System.in);
                
                int idPeca1, qtdPeca1, idPeca2, qtdPeca2;
                double valorPeca1, valorPeca2, valorTotal;
                
                idPeca1 = input.nextInt();
                qtdPeca1 = input.nextInt();
                valorPeca1 = input.nextDouble();
                idPeca2 = input.nextInt();
                qtdPeca2 = input.nextInt();
                valorPeca2 = input.nextDouble();
                
                valorTotal = (qtdPeca1 * valorPeca1) + (qtdPeca2 * valorPeca2);
                
                System.out.printf("VALOR A PAGAR: R$ %.2f\n", valorTotal);

            }
        }
